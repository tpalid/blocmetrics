<h1>Sign In</h1>

<%= form_tag sessions_path do %>
    <div class='form-group'>
        <%= label_tag :email %></br>
        <%= text_field_tag :email %>
    </div>
    <div class='form-group'>
        <%= label_tag :password %></br>
        <%= password_field_tag :password %>
    </div>
    <div class='form-group'>
        <%= submit_tag "Save", class: 'btn btn-success' %>
    </div>
<% end %>

