<h1>Sign In</h1>

<%= form_tag sessions_path do |f| %>
    <div class='form-group'>
        <%= f.label :email %></br>
        <%= f.text_field :email %>
    </div>
    <div class='form-group'>
        <%= f.label :password %></br>
        <%= f.password_field :password %>
    </div>
    <div class='form-group'>
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>

