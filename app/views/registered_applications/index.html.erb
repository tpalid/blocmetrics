<h1> Your Registered Applications </h1>

<div class="row">
    <div class="col-8-md">
        <% @registered_applications.each do |registered_application| %>
            <h4> <%= link_to "#{registered_application.name}", registered_application_path(registered_application) %> </h4>
            <small><%= registered_application.url %> </small>
        <% end %>
    </div>
    
<%= link_to "New Application", new_registered_application_path, class: "btn btn-success" %>
</div>

